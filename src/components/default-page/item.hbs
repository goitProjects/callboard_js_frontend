{{#each this}}
<li class="Card_cardItem scroll-box_item" data-id="{{this._id}}">
   <button class="favorites-top">
   <svg
            class="fav2 fav3"
            fill="green"
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 32 32"
          >
            <title>favorite-icon-hover</title>
            <path
              d="M16 30.72l-2.24-2.24c-8.32-7.36-13.76-12.32-13.76-18.4 0-4.96 3.84-8.8 8.8-8.8 2.72 0 5.44 1.28 7.2 3.36 1.76-2.080 4.48-3.36 7.2-3.36 4.96 0 8.8 3.84 8.8 8.8 0 6.080-5.44 11.040-13.76 18.4l-2.24 2.24z"
            ></path>
          </svg>
          </button>
   {{#if images}}
  <img class="Card_img" src="{{images}}" alt="" />
  {{else}}
<img class="Card_img" src="https://www.makersmakingchange.com/wp-content/uploads/2019/08/Default-no-image-02-500x350.jpg" alt="" />
  {{/if}}
  <p class="Card_description">{{this.description}}</p>
  <span class="Card_price">{{this.price}} грн.</span>
</li>  
{{/each}}
